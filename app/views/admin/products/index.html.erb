<h2 class="sub-header">产品列表</h2>
<div class="table-responsive">
  <div class='products'>
    <table class="table table-striped">
      <thead>
        <tr>
          <th class='col-xs-2'>名称</th>
          <th class='col-xs-1'>分类</th>
          <th class='col-xs-2'>产量</th>
          <th class='col-xs-2'>出厂时间</th>
          <th class='col-xs-2'>登记时间</th>
          <th class='col-xs-3'>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.category.name %></td>
            <td><%= product.count %></td>
            <td><%= product.mtime %></td>
            <td><%= product.created_at.strftime('%F')%></td>
            <td>
              <a role="button" class="btn btn-primary" href="<%= admin_product_path(product)%>">查看</button>
              <a role="button" class="btn btn-warning" href="<%= edit_admin_product_path(product)%>">修改</button>
              <a role="button" class="btn btn-success" href="<%= admin_product_rcoder_path(product)%>">下载二维码</button>
            </td>
          </tr> 
        <% end %>
      </tbody>
    </table>    
    <%= link_to '添加新商品', new_admin_product_path,:class => "btn btn-primary pull-right" %>
  </div>
</div>
