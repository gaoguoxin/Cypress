<div id="content">
	<div id="content2">
		<div id="inner">
			<div id="inner2">
				<div class="container journalisms">
					<div class="row">
						<div class="span9">	
							<div class=" title text-center"><h3><%= @jour.title%></h3></div>
							<div class=" content"><%= raw @jour.content%></div>
							<div class=" date text-right"><h4>发布时间：<%= @jour.updated_at.strftime('%F') %></h4></div>
						</div>
            <div class="span3 rside">
            	<h3>其他新闻</h3>
            	<% @journalisms.each_with_index do |jour|%>
            		<% unless jour.id.to_s == @jour.id.to_s%>
									<div class='row'>
										<a href="/journalisms/<%= jour.id.to_s%>">
											<% if image_tag(jour.image_url(:thumb))%>
												<div class="span1"><%= image_tag(jour.image_url(:thumb),:class => 'img-responsive')%>
												<div class="span2"><%=jour.title%></div>
											<% else %>
												<div class="span3"><%=jour.title%></div>
											<% end %>
											</div>	
										</a>
									</div>
								<% end %>
            	<% end %>
              <%= paginate @journalisms %>
            </div>
					</div>				
				</div>
			</div>	
		</div>
	</div>	
</div>